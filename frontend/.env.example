# Bijmantra Frontend Environment Variables
# Copy this file to .env and fill in your values

# ===================
# API Configuration
# ===================
VITE_API_URL=http://localhost:8000

# ===================
# Meilisearch (Instant Search)
# ===================
# Install: docker run -p 7700:7700 getmeili/meilisearch:latest
VITE_MEILISEARCH_HOST=http://localhost:7700
VITE_MEILISEARCH_API_KEY=

# ===================
# Socket.io (Real-time)
# ===================
VITE_SOCKET_URL=http://localhost:8000

# ===================
# Sentry (Error Tracking)
# ===================
# Get your DSN from https://sentry.io
VITE_SENTRY_DSN=
VITE_APP_VERSION=1.0.0-beta.1

# ===================
# AI Providers
# ===================
VITE_OPENAI_API_KEY=
VITE_ANTHROPIC_API_KEY=
VITE_GOOGLE_AI_API_KEY=

# ===================
# PostHog (Product Analytics)
# ===================
# Get your API key from https://posthog.com
VITE_POSTHOG_API_KEY=
VITE_POSTHOG_HOST=https://app.posthog.com

# ===================
# Feature Flags
# ===================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_REALTIME=true
VITE_ENABLE_AI=true
VITE_ENABLE_WEBGPU=true
VITE_ENABLE_OFFLINE_SYNC=true
