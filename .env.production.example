# Bijmantra Production Environment Configuration
# IMPORTANT: Copy this to .env and fill in all required values before deploying!
#
# Generate secure passwords with: openssl rand -base64 32

# ============================================
# APPLICATION
# ============================================
APP_NAME=Bijmantra
APP_VERSION=1.0.0-beta.1
ENVIRONMENT=production

# ============================================
# DEMO MODE - DISABLED IN PRODUCTION
# ============================================
# Demo data is NOT seeded in production
# Demo mode is completely disabled
DEMO_MODE=false
SEED_DEMO_DATA=false

# ============================================
# DATABASE (PostgreSQL)
# ============================================
# REQUIRED: Generate secure password
POSTGRES_USER=bijmantra_user
POSTGRES_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD
POSTGRES_DB=bijmantra_db

# ============================================
# REDIS
# ============================================
# Internal network only - no password needed if not exposed
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================
# MINIO (Object Storage)
# ============================================
# REQUIRED: Generate secure credentials
MINIO_ROOT_USER=CHANGE_ME_MINIO_USER
MINIO_ROOT_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=bijmantra-images
MINIO_USE_SSL=false

# ============================================
# MEILISEARCH
# ============================================
# REQUIRED: Generate secure master key
# Generate with: openssl rand -base64 32
MEILI_MASTER_KEY=CHANGE_ME_GENERATE_SECURE_KEY

# ============================================
# SECURITY
# ============================================
# REQUIRED: Generate secure secret key
# Generate with: openssl rand -base64 64
SECRET_KEY=CHANGE_ME_GENERATE_SECURE_SECRET_KEY

ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# BACKEND
# ============================================
BACKEND_WORKERS=4
LOG_LEVEL=INFO

# CORS - Update with your actual domain
BACKEND_CORS_ORIGINS=["https://bijmantra.com","https://www.bijmantra.com"]

# ============================================
# DOMAIN & SSL
# ============================================
# Your production domain (used by Caddy for automatic HTTPS)
DOMAIN=bijmantra.com

# ============================================
# FILE UPLOAD
# ============================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_IMAGE_TYPES=["image/jpeg","image/png","image/webp"]

# ============================================
# PAGINATION
# ============================================
DEFAULT_PAGE_SIZE=100
MAX_PAGE_SIZE=1000

# ============================================
# VEENA AI - LLM Configuration (Optional)
# ============================================
# Configure at least one provider for AI features

# Groq (recommended for production - fast and reliable)
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-8b-instant

# Google AI Studio
GOOGLE_AI_KEY=
GOOGLE_MODEL=gemini-1.5-flash

# OpenAI (if you have budget)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# ============================================
# MONITORING (Optional)
# ============================================
# Sentry for error tracking
SENTRY_DSN=

# ============================================
# BACKUP
# ============================================
# Backup retention in days
BACKUP_RETENTION_DAYS=7
